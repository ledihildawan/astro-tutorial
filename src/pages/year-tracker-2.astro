<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>TRACE - The Shape of Time</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet" />

    <style is:global>
      @property --base-hex {
        syntax: '<color>';
        initial-value: #f0eee9;
        inherits: true;
      }

      :root {
        --base-hex: #f0eee9;
        --full-h: 100dvh;
        --bg-system: oklch(from var(--base-hex) 0.97 0.01 h);
        --color-today: var(--base-hex);
        --color-past: oklch(from var(--base-hex) 0.45 0.05 h);
        --color-future: oklch(from var(--base-hex) 0.93 0.02 h);
        --color-ghost-label: oklch(from var(--base-hex) 0.3 0.05 h);
        --color-year-subliminal: oklch(from var(--bg-system) 0.93 0.01 h);
        --color-bar-adaptive: oklch(from var(--base-hex) 0.3 0.1 h / 0.6);
        --color-hover-adaptive: var(--base-hex);
        --radius-standard: 2px;
        --transition-smooth: 0.8s cubic-bezier(0.22, 1, 0.36, 1);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        cursor: default;
        -webkit-tap-highlight-color: transparent;
      }

      body {
        height: var(--full-h);
        width: 100dvw;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--bg-system);
        font-family: 'Inter', sans-serif;
        transition:
          background-color 1.2s ease,
          --base-hex 1.2s ease;
        overscroll-behavior: none;
      }

      #trace-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;

        & #trace-viewport {
          display: grid;
          /* Mengisolasi performa layout grid */
          contain: strict;
          will-change: transform;
          z-index: 2;
          transition: opacity 0.4s ease;
          /* KUNCI: Mematikan scroll browser untuk kontrol penuh JS */
          touch-action: none;
        }

        & #year-watermark {
          position: absolute;
          z-index: 1;
          font-weight: 900;
          font-size: clamp(100px, 25vw, 450px);
          color: var(--color-year-subliminal);
          opacity: 0.4;
          letter-spacing: -0.06em;
          pointer-events: none;
          user-select: none;
          line-height: 0;
          transform: translateZ(0);
        }

        &:has(.day:hover) #year-watermark {
          opacity: 0.15;
          transition: opacity 0.5s ease;
        }
      }

      /* UNIVERSAL LOCK: Efek Fisik 'Pressed' */
      :root:active .day {
        transform: translateY(0) scale(0.98) !important; /* Sedikit mengecil */
        transition-delay: 0ms !important;
        /* Shadow tipis untuk efek 'in-set' */
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05) !important;
      }

      @keyframes theme-pulse-anim {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.01);
        }
        100% {
          transform: scale(1);
        }
      }

      .theme-pulse {
        animation: theme-pulse-anim 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
      }

      .day {
        width: 100%;
        height: 100%;
        border-radius: var(--radius-standard);
        transition:
          background-color var(--transition-smooth),
          opacity var(--transition-smooth),
          transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
          filter var(--transition-smooth),
          box-shadow 0.4s ease;
        transition-delay: var(--delay, 0ms);
        position: relative;
        overflow: hidden;
        backface-visibility: hidden;

        &.day--past {
          background-color: var(--color-past);
        }
        &.day--future {
          background-color: var(--color-future);
          box-shadow: inset 0 0 0 0.5px oklch(from var(--base-hex) 0.8 0.02 h / 0.15);
        }
        &.day--filler {
          opacity: 0.06;
          background-color: var(--color-past);
          filter: grayscale(100%);
          pointer-events: none;
        }
        &.day--today {
          background-color: var(--color-today) !important;
          opacity: 1 !important;
          box-shadow:
            0 0 0 2px var(--bg-system),
            0 12px 30px oklch(from var(--base-hex) 0.2 0.1 h / 0.35);
          z-index: 10;
          transition-delay: 0ms !important;
        }

        /* State Hover & Touch Scrubbing */
        &:hover,
        &.is-touch-active {
          transform: translateY(-2px) scale(1.02);
          z-index: 20;
          opacity: 1 !important;
          box-shadow:
            0 12px 24px -10px oklch(from var(--base-hex) 0.1 0.1 h / 0.4),
            0 0 0 1.5px var(--bg-system);
          background-color: var(--color-hover-adaptive);
          filter: brightness(1.1) saturate(1.2) !important;
          transition-delay: 0ms !important;
        }

        &.day--monday::after {
          content: '';
          position: absolute;
          bottom: 12%;
          left: 50%;
          transform: translateX(-50%);
          width: 2px;
          height: 2px;
          border-radius: 50%;
          background-color: var(--color-ghost-label);
          opacity: 0.15;
          z-index: 4;
          pointer-events: none;
        }
        &[data-ghost-label]::before {
          content: attr(data-ghost-label);
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          font-size: clamp(6px, 0.8vw, 11px);
          font-weight: 800;
          letter-spacing: 0.12em;
          color: var(--color-ghost-label);
          opacity: 0.25;
          pointer-events: none;
          white-space: nowrap;
          z-index: 3;
          transition: color var(--transition-smooth);
          transition-delay: inherit;
        }
        &.day--past[data-ghost-label]::before {
          color: oklch(from var(--base-hex) 0.9 0.05 h);
          opacity: 0.5;
        }
      }

      .now-indicator {
        position: absolute;
        bottom: 0;
        left: 0;
        height: clamp(1.5px, 0.4vh, 3px);
        background-color: var(--color-bar-adaptive);
        width: 0%;
        transition: width 1s linear;
        z-index: 5;
        box-shadow: 0 0 clamp(4px, 1vw, 8px) var(--color-bar-adaptive);
      }

      #tooltip {
        position: fixed;
        pointer-events: none;
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(16px);
        padding: 10px 16px;
        border-radius: 8px;
        font-size: clamp(12px, 1.5vw, 14px);
        font-weight: 600;
        color: #1a1a1a;
        opacity: 0;
        transition: opacity 0.15s ease-out;
        z-index: 100;
        white-space: nowrap;
        /* Pastikan translateZ ada untuk performa GPU */
        transform: translateZ(0);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid oklch(from var(--base-hex) 0.9 0.05 h / 0.5);
        & b {
          color: var(--color-past);
          display: block;
          font-size: 85%;
          margin-top: 4px;
          text-transform: uppercase;
        }
      }

      /* Hidden element for color calc */
      #color-calc {
        visibility: hidden;
        position: absolute;
        width: 0;
        height: 0;
      }
    </style>
  </head>
  <body>
    <div id="trace-container">
      <div id="year-watermark">2026</div>
      <div id="trace-viewport"></div>
    </div>
    <div id="tooltip"></div>
    <div id="color-calc"></div>

    <script type="module">
      const THEMES = [
        '#F0EEE9',
        '#2F6364',
        '#FFBE98',
        '#0F4C81',
        '#88B04B',
        '#F7CAC9',
        '#92A8D1',
        '#955251',
        '#AD5E99',
        '#009473',
      ];

      class TraceEngine {
        constructor() {
          this.viewport = document.getElementById('trace-viewport');
          this.watermark = document.getElementById('year-watermark');
          this.tooltip = document.getElementById('tooltip');
          this.colorCalcEl = document.getElementById('color-calc');
          this.year = 2026;

          // State Variables
          this.lastTouchEl = null;
          this.isTicking = false;
          this.hideTimer = null;
          this.pressTimer = null;
          this.isDragging = false;
          this.startX = 0;
          this.startY = 0;

          this.hasHover = window.matchMedia('(hover: hover)').matches;
          this.tooltipW = 0;
          this.colorIdx = parseInt(localStorage.getItem('trace_theme_index')) || 0;

          this.init();
        }

        init() {
          this.updateColors(THEMES[this.colorIdx]);
          window.addEventListener('keydown', (e) => e.key.toLowerCase() === 'c' && this.cycle());

          // --- Interaction Handlers ---
          const handleStart = (e) => {
            const t = e.touches ? e.touches[0] : e;
            this.startX = t.clientX;
            this.startY = t.clientY;
            this.isDragging = false;

            if (this.hideTimer) clearTimeout(this.hideTimer);

            // Instant Feedback Visual (Tanpa Logic Berat)
            if (e.touches) this.handleTouch(e);

            // Ritual Timer
            this.pressTimer = setTimeout(() => {
              if (!this.isDragging) this.cycle();
            }, 800);
          };

          const handleMove = (e) => {
            const t = e.touches[0];
            // Deadzone 10px untuk membedakan Tap vs Drag
            const dist = Math.hypot(t.clientX - this.startX, t.clientY - this.startY);

            if (dist > 10) {
              this.isDragging = true;
              clearTimeout(this.pressTimer);

              if (!this.isTicking) {
                window.requestAnimationFrame(() => {
                  this.handleTouch(e);
                  this.isTicking = false;
                });
                this.isTicking = true;
              }
            }
          };

          const handleEnd = () => {
            clearTimeout(this.pressTimer);
            // Linger Effect 2.5 Detik
            this.hideTimer = setTimeout(() => {
              this.tooltip.style.opacity = 0;
              if (this.lastTouchEl) {
                this.lastTouchEl.classList.remove('is-touch-active');
                this.lastTouchEl = null;
              }
            }, 2500);
          };

          // --- Event Binding ---
          document.addEventListener('mousedown', handleStart);
          document.addEventListener('mouseup', () => clearTimeout(this.pressTimer));

          // Passive: false wajib untuk kontrol preventDefault scroll
          this.viewport.addEventListener('touchstart', handleStart, { passive: false });
          this.viewport.addEventListener('touchmove', handleMove, { passive: false });
          document.addEventListener('touchend', handleEnd);

          window.addEventListener('resize', () => {
            this.hasHover = window.matchMedia('(hover: hover)').matches;
            this.render();
          });

          this.render();
          setInterval(() => this.updateProgress(), 60000);
        }

        updateColors(hex) {
          document.documentElement.style.setProperty('--base-hex', hex);
          // Optimize: Reuse element instead of create/destroy
          this.colorCalcEl.style.color = `oklch(from ${hex} l c h)`;
          const computedColor = window.getComputedStyle(this.colorCalcEl).color;
          const l = parseFloat(computedColor.match(/[\d.]+/)[0]);

          const isDark = l < 0.6;
          const isLight = l > 0.7;

          document.documentElement.style.setProperty(
            '--color-bar-adaptive',
            `oklch(from ${hex} ${isDark ? 0.9 : 0.3} ${isDark ? 0.05 : 0.1} h / 0.7)`
          );

          document.documentElement.style.setProperty(
            '--color-hover-adaptive',
            `oklch(from ${hex} ${isLight ? 0.6 : l} ${isLight ? 0.15 : 0.1} h)`
          );
        }

        cycle() {
          if (navigator.vibrate) navigator.vibrate(50); // Haptic: Heavy

          this.colorIdx = (this.colorIdx + 1) % THEMES.length;
          this.updateColors(THEMES[this.colorIdx]);
          localStorage.setItem('trace_theme_index', this.colorIdx);

          // Force Reflow untuk restart animasi pulse
          this.viewport.classList.remove('theme-pulse');
          void this.viewport.offsetWidth;
          this.viewport.classList.add('theme-pulse');

          // Reset UI
          this.tooltip.style.opacity = 0;
          this.render();
        }

        updateProgress() {
          const b = document.getElementById('today-bar');
          if (b) {
            const min = new Date().getHours() * 60 + new Date().getMinutes();
            b.style.width = `${(min / 1440) * 100}%`;
          }
        }

        handleTouch(e) {
          if (e.cancelable) e.preventDefault(); // Stop Scroll
          const t = e.touches[0];
          const target = document.elementFromPoint(t.clientX, t.clientY);

          if (target?.classList.contains('day') && !target.classList.contains('day--filler')) {
            if (this.lastTouchEl !== target) {
              if (this.lastTouchEl) this.lastTouchEl.classList.remove('is-touch-active');
              if (navigator.vibrate) navigator.vibrate(5); // Haptic: Light
            }
            target.classList.add('is-touch-active');
            this.lastTouchEl = target;

            if (target.dataset.date) {
              this.updateTooltip(target.dataset.date, target.dataset.info);
              this.posTooltip(t.clientX, t.clientY, true);
            }
          }
        }

        updateTooltip(d, i) {
          const h = `${d}<b>${i}</b>`;
          if (this.tooltip.innerHTML !== h) {
            this.tooltip.innerHTML = h;
            // Cache width untuk hindari layout thrashing saat drag
            this.tooltipW = this.tooltip.getBoundingClientRect().width;
          }
          this.tooltip.style.opacity = 1;
        }

        posTooltip(cX, cY, isTouch) {
          // Logic Smart HUD
          let x = cX;
          let y = cY;

          // Boundary X
          if (x + this.tooltipW / 2 + 10 > window.innerWidth) x = window.innerWidth - this.tooltipW / 2 - 10;
          else if (x - this.tooltipW / 2 - 10 < 0) x = this.tooltipW / 2 + 10;

          // Boundary Y & Flip Logic
          if (isTouch) {
            const isTop = cY < window.innerHeight / 2;
            y = isTop ? y + 60 : y - 60;
            // Penting: Sertakan translateZ(0) agar tidak drop frame
            this.tooltip.style.transform = `translate(-50%, ${isTop ? '0' : '-100%'}) translateZ(0)`;
          } else {
            y -= 20;
            this.tooltip.style.transform = `translate(-50%, -100%) translateZ(0)`;
          }

          this.tooltip.style.left = `${x}px`;
          this.tooltip.style.top = `${y}px`;
        }

        render() {
          const now = new Date();
          const days = (this.year % 4 === 0 && this.year % 100 !== 0) || this.year % 400 === 0 ? 366 : 365;
          const layout = this.calcGrid(window.innerWidth, window.innerHeight, days);
          const total = layout.c * layout.r;

          // Center Grid Logic
          const start = new Date(this.year, 0, 1, 12, 0, 0);
          start.setDate(start.getDate() - Math.floor((total - days) / 2));

          this.viewport.style.cssText = `gap:${layout.gap}px; grid-template-columns:repeat(${layout.c},${layout.s}px); grid-template-rows:repeat(${layout.r},${layout.s}px);`;

          const frag = document.createDocumentFragment();
          const months = ['JAN', 'FEB', 'MAR', 'APR', 'MEI', 'JUN', 'JUL', 'AGU', 'SEP', 'OKT', 'NOV', 'DES'];

          for (let i = 0; i < total; i++) {
            const el = document.createElement('div');
            const isTarg = start.getFullYear() === this.year;
            let type = 'filler';

            if (isTarg) {
              const sStr = start.toDateString();
              const nStr = now.toDateString();
              if (sStr === nStr) type = 'today';
              else if (start < now) type = 'past';
              else type = 'future';
            }

            el.className = `day day--${type}`;
            // Staggered Animation Delay
            el.style.setProperty('--delay', `${((i % layout.c) + Math.floor(i / layout.c)) * 12}ms`);

            if (start.getDay() === 1) el.classList.add('day--monday');

            if (type === 'past') {
              const diff = Math.round((now - start) / 864e5);
              el.style.opacity = Math.max(0.12, 1 - diff * 0.008);
              el.style.filter = `grayscale(${Math.min(100, diff * 0.5)}%)`;
            }

            if (type === 'today') {
              const b = document.createElement('div');
              b.className = 'now-indicator';
              b.id = 'today-bar';
              el.appendChild(b);
            }

            if (isTarg && start.getDate() === 1) el.setAttribute('data-ghost-label', months[start.getMonth()]);

            if (type !== 'filler') {
              const dNum = Math.round((start - new Date(this.year, 0, 1, 12, 0, 0)) / 864e5) + 1;
              el.dataset.date = start.toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long' });
              el.dataset.info = `Day ${dNum} â€¢ ${((dNum / days) * 100).toFixed(1)}% of Year`;

              // Desktop Mouse Events
              el.onmouseenter = (e) => {
                if (this.hasHover) {
                  this.updateTooltip(el.dataset.date, el.dataset.info);
                  this.posTooltip(e.clientX, e.clientY, false);
                }
              };
              el.onmousemove = (e) => {
                if (this.hasHover) this.posTooltip(e.clientX, e.clientY, false);
              };
              el.onmouseleave = () => (this.tooltip.style.opacity = 0);
            }
            frag.appendChild(el);
            start.setDate(start.getDate() + 1);
          }

          this.viewport.innerHTML = '';
          this.viewport.appendChild(frag);

          requestAnimationFrame(() => {
            const r = this.viewport.getBoundingClientRect();
            this.watermark.style.width = `${r.width}px`;
            this.watermark.style.height = `${r.height}px`;
          });
          this.updateProgress();
        }

        calcGrid(w, h, d) {
          const sc = Math.max(w, 240) / 1200;
          const gap = Math.max(2, 10 * sc);
          const f = Math.max(25, 50 * sc);
          const availWidth = w - f * 2;
          const availHeight = h - f * 2;

          let bestSize = 0;
          // Algoritma Optimasi Grid
          for (let c = 1; c <= d; c++) {
            const rows = Math.ceil(d / c);
            const size = Math.min((availWidth - (c - 1) * gap) / c, (availHeight - (rows - 1) * gap) / rows);
            if (size > bestSize) bestSize = size;
          }

          const s = Math.floor(bestSize);
          return {
            s,
            gap,
            c: Math.floor((availWidth + gap) / (s + gap)),
            r: Math.floor((availHeight + gap) / (s + gap)),
          };
        }
      }
      new TraceEngine();
    </script>
  </body>
</html>
