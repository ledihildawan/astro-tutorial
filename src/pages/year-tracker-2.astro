<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>TRACE - The Shape of Time</title>
    <meta name="description" content="A meditative time landscape designed to silence digital noise." />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet" />

    <style is:global>
      @property --base-hex {
        syntax: '<color>';
        initial-value: #f0eee9;
        inherits: true;
      }

      :root {
        --base-hex: #f0eee9;
        --full-h: 100dvh;
        --bg-system: oklch(from var(--base-hex) 0.97 0.01 h);
        --color-today: var(--base-hex);
        --color-past: oklch(from var(--base-hex) 0.45 0.05 h);
        --color-future: oklch(from var(--base-hex) 0.93 0.02 h);
        --color-ghost-label: oklch(from var(--base-hex) 0.3 0.05 h);
        --color-year-subliminal: oklch(from var(--bg-system) 0.93 0.01 h);
        --color-bar-adaptive: oklch(from var(--base-hex) 0.3 0.1 h / 0.6);
        --color-hover-adaptive: var(--base-hex);
        --radius-standard: 2px;
        --transition-smooth: 0.8s cubic-bezier(0.22, 1, 0.36, 1);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        cursor: default;
        -webkit-tap-highlight-color: transparent;
      }

      body {
        height: var(--full-h);
        width: 100dvw;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--bg-system);
        font-family: 'Inter', sans-serif;
        transition:
          background-color 1.2s ease,
          --base-hex 1.2s ease;
        overscroll-behavior: none;
      }

      #trace-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;

        & #trace-viewport {
          display: grid;
          contain: strict;
          will-change: transform;
          z-index: 2;
          transition: opacity 0.4s ease;
          touch-action: none;
        }

        & #year-watermark {
          position: absolute;
          z-index: 1;
          font-weight: 900;
          font-size: clamp(100px, 25vw, 450px);
          color: var(--color-year-subliminal);
          opacity: 0.4;
          letter-spacing: -0.06em;
          pointer-events: none;
          user-select: none;
          display: flex;
          justify-content: center;
          align-items: center;
          line-height: 0;
          transform: translateZ(0);
        }

        &:has(.day:hover) #year-watermark {
          opacity: 0.15;
          transition: opacity 0.5s ease;
        }
      }

      :root:active .day {
        transform: translateY(0) scale(1) !important;
        transition-delay: 0ms !important;
        box-shadow: none !important;
        filter: none !important;
      }

      @keyframes theme-pulse-anim {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.01);
        }
        100% {
          transform: scale(1);
        }
      }

      .theme-pulse {
        animation: theme-pulse-anim 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
      }

      .day {
        width: 100%;
        height: 100%;
        border-radius: var(--radius-standard);
        transition:
          background-color var(--transition-smooth),
          opacity var(--transition-smooth),
          transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
          filter var(--transition-smooth),
          box-shadow 0.4s ease;
        transition-delay: var(--delay, 0ms);
        position: relative;
        overflow: hidden;
        backface-visibility: hidden;
        transform-style: preserve-3d;

        &.day--past {
          background-color: var(--color-past);
        }
        &.day--future {
          background-color: var(--color-future);
          box-shadow: inset 0 0 0 0.5px oklch(from var(--base-hex) 0.8 0.02 h / 0.15);
        }
        &.day--filler {
          opacity: 0.06;
          background-color: var(--color-past);
          filter: grayscale(100%);
          pointer-events: none;
        }
        &.day--today {
          background-color: var(--color-today) !important;
          opacity: 1 !important;
          box-shadow:
            0 0 0 2px var(--bg-system),
            0 12px 30px oklch(from var(--base-hex) 0.2 0.1 h / 0.35);
          z-index: 10;
          border-radius: 3px;
          filter: none !important;
          transition-delay: 0ms !important;
        }
        &:hover,
        &.is-touch-active {
          transform: translateY(-2px) scale(1.02);
          z-index: 20;
          opacity: 1 !important;
          box-shadow:
            0 12px 24px -10px oklch(from var(--base-hex) 0.1 0.1 h / 0.4),
            0 0 0 1.5px var(--bg-system);
          background-color: var(--color-hover-adaptive);
          filter: brightness(1.1) saturate(1.2) !important;
          transition-delay: 0ms !important;
        }
        &.day--monday::after {
          content: '';
          position: absolute;
          bottom: 12%;
          left: 50%;
          transform: translateX(-50%);
          width: 2px;
          height: 2px;
          border-radius: 50%;
          background-color: var(--color-ghost-label);
          opacity: 0.15;
          z-index: 4;
          pointer-events: none;
        }
        &[data-ghost-label]::before {
          content: attr(data-ghost-label);
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          font-size: clamp(6px, 0.8vw, 11px);
          font-weight: 800;
          letter-spacing: 0.12em;
          color: var(--color-ghost-label);
          opacity: 0.25;
          pointer-events: none;
          white-space: nowrap;
          z-index: 3;
          transition: color var(--transition-smooth);
          transition-delay: inherit;
        }
        &.day--past[data-ghost-label]::before {
          color: oklch(from var(--base-hex) 0.9 0.05 h);
          opacity: 0.5;
        }
      }

      .now-indicator {
        position: absolute;
        bottom: 0;
        left: 0;
        height: clamp(1.5px, 0.4vh, 3px);
        background-color: var(--color-bar-adaptive);
        width: 0%;
        transition: width 1s linear;
        z-index: 5;
        box-shadow: 0 0 clamp(4px, 1vw, 8px) var(--color-bar-adaptive);
      }

      #tooltip {
        position: fixed;
        pointer-events: none;
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(16px);
        padding: 10px 16px;
        border-radius: 8px;
        font-size: clamp(12px, 1.5vw, 14px);
        font-weight: 600;
        color: #1a1a1a;
        opacity: 0;
        transition: opacity 0.15s ease-out;
        z-index: 100;
        white-space: nowrap;
        box-shadow:
          0 15px 40px rgba(0, 0, 0, 0.1),
          0 0 0 1px rgba(255, 255, 255, 0.5) inset;
        border: 1px solid oklch(from var(--base-hex) 0.9 0.05 h / 0.5);
        will-change: transform, opacity;
        transform: translateZ(0);

        & b {
          color: var(--color-past);
          display: block;
          font-size: 85%;
          margin-top: 4px;
          text-transform: uppercase;
        }
      }
    </style>
  </head>
  <body>
    <div id="trace-container">
      <div id="year-watermark">2026</div>
      <div id="trace-viewport"></div>
    </div>
    <div id="tooltip"></div>

    <script type="module">
      const THEMES = [
        '#804D37',
        '#43C6C3',
        '#F5F4ED',
        '#F2C749',
        '#F75A33',
        '#9ABA95',
        '#FCDF29',
        '#D5E9E8',
        '#FFF4AA',
        '#D54751',
      ];

      class TraceEngine {
        constructor() {
          this.viewport = document.getElementById('trace-viewport');
          this.watermark = document.getElementById('year-watermark');
          this.tooltip = document.getElementById('tooltip');
          this.year = 2026;
          this.lastTouchElement = null;
          this.isTicking = false;
          this.tooltipHideTimer = null;
          this.startX = 0;
          this.startY = 0;
          this.hasHover = window.matchMedia('(hover: hover)').matches;
          this.tooltipWidth = 0;
          this.colorIndex = parseInt(localStorage.getItem('trace_theme_index')) || 0;
          this.init();
        }

        init() {
          this.updateColors(THEMES[this.colorIndex]);
          window.addEventListener('keydown', (e) => e.key.toLowerCase() === 'c' && this.cycleTheme());

          let pressTimer;
          let isDragging = false;

          const handleMouseDown = () => {
            pressTimer = setTimeout(() => this.cycleTheme(), 800);
          };
          const handleMouseUp = () => clearTimeout(pressTimer);

          const handleTouchStart = (e) => {
            const touch = e.touches[0];
            this.startX = touch.clientX;
            this.startY = touch.clientY;
            isDragging = false;
            if (this.tooltipHideTimer) clearTimeout(this.tooltipHideTimer);
            this.handleTouchInteraction(e);
            pressTimer = setTimeout(() => {
              if (!isDragging) {
                this.cycleTheme();
                this.tooltip.style.opacity = 0;
                if (this.lastTouchElement) {
                  this.lastTouchElement.classList.remove('is-touch-active');
                  this.lastTouchElement = null;
                }
              }
            }, 800);
          };

          const handleTouchMove = (e) => {
            const touch = e.touches[0];
            if (Math.hypot(touch.clientX - this.startX, touch.clientY - this.startY) > 10) {
              isDragging = true;
              clearTimeout(pressTimer);
              if (!this.isTicking) {
                window.requestAnimationFrame(() => {
                  this.handleTouchInteraction(e);
                  this.isTicking = false;
                });
                this.isTicking = true;
              }
            }
          };

          const handleTouchEnd = () => {
            clearTimeout(pressTimer);
            this.tooltipHideTimer = setTimeout(() => {
              this.tooltip.style.opacity = 0;
              if (this.lastTouchElement) {
                this.lastTouchElement.classList.remove('is-touch-active');
                this.lastTouchElement = null;
              }
            }, 2500);
          };

          document.addEventListener('mousedown', handleMouseDown);
          document.addEventListener('mouseup', handleMouseUp);
          this.viewport.addEventListener('touchstart', handleTouchStart, { passive: false });
          this.viewport.addEventListener('touchmove', handleTouchMove, { passive: false });
          document.addEventListener('touchend', handleTouchEnd);
          window.addEventListener('resize', () => {
            this.hasHover = window.matchMedia('(hover: hover)').matches;
            this.debounceRender();
          });

          this.render();
          setInterval(() => this.updateProgress(), 60000);
        }

        triggerHaptic(type) {
          if (!navigator.vibrate) return;
          navigator.vibrate(type === 'scrub' ? 5 : 50);
        }

        updateTooltip(html) {
          if (this.tooltip.innerHTML !== html) {
            this.tooltip.innerHTML = html;
            this.tooltipWidth = this.tooltip.getBoundingClientRect().width;
          }
          this.tooltip.style.opacity = 1;
        }

        handleTouchInteraction(e) {
          if (e.cancelable) e.preventDefault();
          const touch = e.touches[0];
          const target = document.elementFromPoint(touch.clientX, touch.clientY);
          if (target?.classList.contains('day') && !target.classList.contains('day--filler')) {
            if (this.lastTouchElement !== target) {
              if (this.lastTouchElement) this.lastTouchElement.classList.remove('is-touch-active');
              this.triggerHaptic('scrub');
            }
            target.classList.add('is-touch-active');
            this.lastTouchElement = target;
            if (target.dataset.date) {
              this.updateTooltip(`${target.dataset.date}<b>${target.dataset.info}</b>`);
              this.positionTooltip(touch.clientX, touch.clientY, true);
            }
          }
        }

        updateColors(hex) {
          document.documentElement.style.setProperty('--base-hex', hex);
          const temp = document.createElement('div');
          temp.style.color = `oklch(from ${hex} l c h)`;
          document.body.appendChild(temp);
          const l = parseFloat(window.getComputedStyle(temp).color.match(/[\d.]+/)[0]);
          document.body.removeChild(temp);

          document.documentElement.style.setProperty(
            '--color-bar-adaptive',
            `oklch(from ${hex} ${l < 0.6 ? 0.9 : 0.3} ${l < 0.6 ? 0.05 : 0.1} h / 0.7)`
          );
          document.documentElement.style.setProperty(
            '--color-hover-adaptive',
            `oklch(from ${hex} ${l > 0.7 ? 0.6 : l} ${l > 0.7 ? 0.15 : 0.1} h)`
          );
        }

        cycleTheme() {
          this.triggerHaptic('success');
          this.colorIndex = (this.colorIndex + 1) % THEMES.length;
          this.updateColors(THEMES[this.colorIndex]);
          localStorage.setItem('trace_theme_index', this.colorIndex);
          this.viewport.classList.remove('theme-pulse');
          void this.viewport.offsetWidth;
          this.viewport.classList.add('theme-pulse');
          this.render();
        }

        debounceRender() {
          clearTimeout(this.timer);
          this.timer = setTimeout(() => this.render(), 100);
        }

        updateProgress() {
          const bar = document.getElementById('today-bar');
          if (bar) {
            const now = new Date();
            bar.style.width = `${((now.getHours() * 60 + now.getMinutes()) / 1440) * 100}%`;
          }
        }

        positionTooltip(clientX, clientY, isTouch = false) {
          const gap = isTouch ? 40 : 20;
          let x = clientX;
          let y = clientY;
          if (x + this.tooltipWidth / 2 + 10 > window.innerWidth) x = window.innerWidth - this.tooltipWidth / 2 - 10;
          else if (x - this.tooltipWidth / 2 - 10 < 0) x = this.tooltipWidth / 2 + 10;

          if (isTouch) {
            const isTop = clientY < window.innerHeight / 2;
            y = isTop ? y + 60 : y - 60;
            this.tooltip.style.transform = `translate(-50%, ${isTop ? '0' : '-100%'})`;
          } else {
            y -= 20;
            this.tooltip.style.transform = `translate(-50%, -100%)`;
          }
          this.tooltip.style.left = `${x}px`;
          this.tooltip.style.top = `${y}px`;
        }

        render() {
          const now = new Date();
          const currentYear = now.getFullYear();
          const days = (currentYear % 4 === 0 && currentYear % 100 !== 0) || currentYear % 400 === 0 ? 366 : 365;
          const layout = this.calculateGrid(window.innerWidth, window.innerHeight, days);
          const total = layout.c * layout.r;
          const start = new Date(currentYear, 0, 1, 12, 0, 0);
          start.setDate(start.getDate() - Math.floor((total - days) / 2));

          this.viewport.style.cssText = `gap:${layout.gap}px; grid-template-columns:repeat(${layout.c},${layout.s}px); grid-template-rows:repeat(${layout.r},${layout.s}px);`;
          const frag = document.createDocumentFragment();
          const months = ['JAN', 'FEB', 'MAR', 'APR', 'MEI', 'JUN', 'JUL', 'AGU', 'SEP', 'OKT', 'NOV', 'DES'];

          for (let i = 0; i < total; i++) {
            const el = document.createElement('div');
            const isTarg = start.getFullYear() === currentYear;
            let type = 'filler';
            if (isTarg) {
              if (start.toDateString() === now.toDateString()) type = 'today';
              else if (start < now) type = 'past';
              else type = 'future';
            }
            el.className = `day day--${type}`;
            el.style.setProperty('--delay', `${((i % layout.c) + Math.floor(i / layout.c)) * 12}ms`);
            if (start.getDay() === 1) el.classList.add('day--monday');
            if (type === 'past') {
              const diff = Math.round((now - start) / 86400000);
              el.style.opacity = Math.max(0.12, 1 - diff * 0.008);
              el.style.filter = `grayscale(${Math.min(100, diff * 0.5)}%)`;
            }
            if (type === 'today') {
              const b = document.createElement('div');
              b.className = 'now-indicator';
              b.id = 'today-bar';
              el.appendChild(b);
            }
            if (isTarg && start.getDate() === 1) el.setAttribute('data-ghost-label', months[start.getMonth()]);
            if (type !== 'filler') {
              const dNum = Math.round((start - new Date(currentYear, 0, 1, 12, 0, 0)) / 86400000) + 1;
              el.dataset.date = start.toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long' });
              el.dataset.info = `Day ${dNum} â€¢ ${((dNum / days) * 100).toFixed(1)}% of Year`;
              el.onmouseenter = (e) => {
                if (this.hasHover) {
                  this.updateTooltip(el.dataset.date, el.dataset.info);
                  this.positionTooltip(e.clientX, e.clientY, false);
                }
              };
              el.onmousemove = (e) => {
                if (this.hasHover) this.positionTooltip(e.clientX, e.clientY, false);
              };
              el.onmouseleave = () => (this.tooltip.style.opacity = 0);
            }
            frag.appendChild(el);
            start.setDate(start.getDate() + 1);
          }
          this.viewport.innerHTML = '';
          this.viewport.appendChild(frag);
          requestAnimationFrame(() => {
            const r = this.viewport.getBoundingClientRect();
            this.watermark.style.width = `${r.width}px`;
            this.watermark.style.height = `${r.height}px`;
          });
          this.updateProgress();
        }

        calculateGrid(w, h, d) {
          const sc = Math.max(w, 240) / 1200;
          const gap = Math.max(2, 10 * sc);
          const f = Math.max(25, 50 * sc);
          const aW = w - f * 2,
            aH = h - f * 2;
          let bS = 0;
          for (let c = 1; c <= d; c++) {
            const r = Math.ceil(d / c);
            const s = Math.min((aW - (c - 1) * gap) / c, (aH - (r - 1) * gap) / r);
            if (s > bS) bS = s;
          }
          const s = Math.floor(bS);
          return { s, gap, c: Math.floor((aW + gap) / (s + gap)), r: Math.floor((aH + gap) / (s + gap)) };
        }
      }
      new TraceEngine();
    </script>
  </body>
</html>
