<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Chronos Grid 2026 - Final Polish v1.2</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />

    <style is:global>
      :root {
        --base-hex: #f0eee9;
        --full-h: 100dvh;
        --full-w: 100dvw;

        --bg-system: oklch(from var(--base-hex) 0.97 0.01 h);
        --color-today: var(--base-hex);
        --color-past: oklch(from var(--base-hex) 0.45 0.05 h);
        --color-future: oklch(from var(--base-hex) 0.93 0.02 h);
        --color-ghost: oklch(from var(--base-hex) 0.3 0.05 h);
        --radius-standard: 2px;
        --transition-smooth: 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        cursor: default;
      }

      body {
        height: var(--full-h);
        width: var(--full-w);
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--bg-system);
        font-family:
          'Inter',
          -apple-system,
          sans-serif;
        transition: background-color 1s ease;
      }

      #chronos-viewport {
        display: grid;
        will-change: transform;
        backface-visibility: hidden;
      }

      .day {
        width: 100%;
        height: 100%;
        border-radius: var(--radius-standard);
        transition:
          background-color var(--transition-smooth),
          opacity var(--transition-smooth),
          transform 0.3s ease;
        position: relative;
      }

      .day--past {
        background-color: var(--color-past);
      }
      .day--future {
        background-color: var(--color-future);
        box-shadow: inset 0 0 0 0.5px oklch(from var(--base-hex) 0.8 0.02 h / 0.3);
      }
      /* Saran #6: Filler dinaikkan ke 0.08 untuk visibilitas monitor 2K */
      .day--filler {
        opacity: 0.08;
        background-color: var(--color-past);
      }

      .day--today {
        background-color: var(--color-today) !important;
        opacity: 1 !important;
        /* Saran #2: Opsi 2 (Mengambang Lembut) menggunakan OKLCH */
        box-shadow:
          0 0 0 2px var(--bg-system),
          0 12px 30px oklch(from var(--base-hex) 0.2 0.1 h / 0.4);
        z-index: 10;
        border-radius: 3px;
      }

      .day--monday::after {
        content: '';
        position: absolute;
        left: 1.5px;
        top: 20%;
        bottom: 20%;
        width: 1px;
        background-color: oklch(from var(--base-hex) 0.2 0.05 h / 0.15);
      }

      .day[data-ghost-label]::before {
        content: attr(data-ghost-label);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        /* Saran #1: Font ditingkatkan ke 9px */
        font-size: 9px;
        font-weight: 800;
        letter-spacing: 0.1em;
        color: var(--color-ghost);
        opacity: 0.35;
        pointer-events: none;
      }

      .day:hover {
        /* Saran #5: Scale disesuaikan ke 1.3 agar tidak terlalu agresif */
        transform: scale(1.3);
        z-index: 20;
        opacity: 1 !important;
        box-shadow: 0 8px 25px oklch(from var(--base-hex) 0.2 0.1 h / 0.25);
        background-color: var(--color-today);
        filter: brightness(1.1);
      }

      #tooltip {
        position: fixed;
        pointer-events: none;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        padding: 10px 16px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 600;
        color: #1a1a1a;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        opacity: 0;
        transition: opacity 0.2s;
        z-index: 100;
        transform: translate(-50%, -135%);
        border: 1px solid oklch(from var(--base-hex) 0.9 0.05 h);
        /* Saran #4: Tooltip tidak pecah baris */
        white-space: nowrap;
      }

      #tooltip b {
        color: var(--color-past);
        display: block;
        font-size: 10px;
        margin-top: 4px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      #hint {
        position: fixed;
        bottom: 3dvh;
        left: 50%;
        transform: translateX(-50%);
        font-size: 10px;
        font-weight: 600;
        color: var(--color-ghost);
        opacity: 0.5;
        letter-spacing: 2px;
        text-transform: uppercase;
      }
    </style>
  </head>
  <body>
    <div id="chronos-viewport"></div>
    <div id="tooltip"></div>
    <div id="hint">Press <b>'C'</b> to Cycle Themes</div>

    <script type="module">
      const THEME_COLORS = [
        '#F0EEE9',
        '#2F6364',
        '#C9D3C0',
        '#F0D9CC',
        '#DBD3DC',
        '#79B6D8',
        '#BB2649',
        '#0F4C81',
        '#FF6F61',
        '#88B04B',
        '#AD5E99',
        '#009473',
        '#DD4124',
        '#45B5AA',
        '#9B1B30',
        '#53B0AE',
      ];

      class ChronosEngine {
        constructor() {
          this.viewport = document.getElementById('chronos-viewport');
          this.tooltip = document.getElementById('tooltip');
          this.year = 2026;
          this.colorIndex = 0;
          this.init();
        }

        init() {
          this.applyTheme(THEME_COLORS[this.colorIndex]);
          window.addEventListener('keydown', (e) => {
            if (e.key.toLowerCase() === 'c') {
              this.colorIndex = (this.colorIndex + 1) % THEME_COLORS.length;
              this.applyTheme(THEME_COLORS[this.colorIndex]);
              this.renderWithCurrentToday();
            }
          });
          window.addEventListener('resize', () => this.debounceRender());
          this.renderWithRealToday();
        }

        applyTheme(hex) {
          document.documentElement.style.setProperty('--base-hex', hex);
        }

        calculateGrid(w, h, days) {
          const scale = Math.max(w, 240) / 1200;
          const gap = Math.max(2, 10 * scale);
          const frame = Math.max(30, 60 * scale);
          const availW = w - frame * 2;
          const availH = h - frame * 2;
          let bestS = 0;
          for (let c = 1; c <= days; c++) {
            const r = Math.ceil(days / c);
            const s = Math.min((availW - (c - 1) * gap) / c, (availH - (r - 1) * gap) / r);
            if (s > bestS) bestS = s;
          }
          const s = Math.floor(bestS);
          return { s, gap, c: Math.floor((availW + gap) / (s + gap)), r: Math.floor((availH + gap) / (s + gap)) };
        }

        debounceRender() {
          clearTimeout(this.timer);
          this.timer = setTimeout(() => this.renderWithCurrentToday(), 100);
        }

        renderWithRealToday() {
          const d = new Date();
          this.currentTodayInfo = {
            str: d.toDateString(),
            time: new Date(d.getFullYear(), d.getMonth(), d.getDate()).getTime(),
          };
          this._render(this.currentTodayInfo);
        }

        renderWithCurrentToday() {
          if (this.currentTodayInfo) this._render(this.currentTodayInfo);
        }

        _render(todayInfo) {
          const days = (this.year % 4 === 0 && this.year % 100 !== 0) || this.year % 400 === 0 ? 366 : 365;
          const layout = this.calculateGrid(window.innerWidth, window.innerHeight, days);
          const totalCells = layout.c * layout.r;

          const startOffset = Math.floor((totalCells - days) / 2);
          const startDate = new Date(this.year, 0, 1);
          startDate.setDate(startDate.getDate() - startOffset);

          this.viewport.style.cssText = `gap: ${layout.gap}px; grid-template-columns: repeat(${layout.c}, ${layout.s}px); grid-template-rows: repeat(${layout.r}, ${layout.s}px);`;

          const fragment = document.createDocumentFragment();
          const cursor = new Date(startDate);
          const months = ['JAN', 'FEB', 'MAR', 'APR', 'MEI', 'JUN', 'JUL', 'AGU', 'SEP', 'OKT', 'NOV', 'DES'];

          for (let i = 0; i < totalCells; i++) {
            const el = document.createElement('div');
            const isTargetYear = cursor.getFullYear() === this.year;
            const dTime = cursor.getTime();

            let type = 'filler';
            if (isTargetYear) {
              if (cursor.toDateString() === todayInfo.str) type = 'today';
              else if (dTime < todayInfo.time) type = 'past';
              else type = 'future';
            }

            el.className = `day day--${type}`;
            if (cursor.getDay() === 1) el.classList.add('day--monday');

            if (type === 'past') {
              const diff = Math.floor((todayInfo.time - dTime) / 86400000);
              // Saran #3: Koefisien Fading dioptimalkan ke 0.008 (0.8% per hari)
              el.style.opacity = Math.max(0.12, 1 - diff * 0.008);
            }

            if (isTargetYear && cursor.getDate() === 1) {
              el.setAttribute('data-ghost-label', months[cursor.getMonth()]);
            }

            if (type !== 'filler') {
              el.dataset.date = cursor.toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long' });
              el.dataset.daynum = Math.floor((cursor - new Date(this.year, 0, 0)) / 86400000);

              el.onmouseenter = (e) => {
                this.tooltip.innerHTML = `${el.dataset.date}<b>Day ${el.dataset.daynum}</b>`;
                this.tooltip.style.opacity = 1;
              };
              el.onmousemove = (e) => {
                this.tooltip.style.left = e.clientX + 'px';
                this.tooltip.style.top = e.clientY - 15 + 'px';
              };
              el.onmouseleave = () => (this.tooltip.style.opacity = 0);
            }

            fragment.appendChild(el);
            cursor.setDate(cursor.getDate() + 1);
          }
          this.viewport.innerHTML = '';
          this.viewport.appendChild(fragment);
        }
      }

      new ChronosEngine();
    </script>
  </body>
</html>
