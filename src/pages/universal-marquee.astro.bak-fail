    <style is:global data-label="GLOBAL_STYLES">
      :root {
        --radius-xs: 6px;
        --radius-sm: 12px;
        --radius-md: 20px;
        --radius-lg: 24px;
        --radius-xl: 30px;
        --radius-pill: 60px;
        --font-family-primary: 'Outfit', system-ui, sans-serif;
        --font-family-heading: 'Space Grotesk', system-ui, sans-serif;
        --font-family-fun: 'Luckiest Guy', sans-serif;
        --font-family-mono: 'Space Mono', monospace;
        --font-size-base: clamp(1rem, 2.5vw, 1.125rem);
        --font-size-xs: 0.8rem;
        --font-size-sm: 0.85rem;
        --font-size-code: 0.9rem;
        --font-size-large: clamp(1.5rem, 4vw, 2.5rem);
        --font-size-xl: clamp(2rem, 5vw, 3.5rem);
        --font-size-h3-card: 1.75rem;
        --font-size-heading: clamp(2.5rem, 6vw, 4rem);
        --gap-xs: 6px;
        --gap-sm: 8px;
        --padding-xs: 6px;
        --spacing-sm: 1rem;
        --spacing-md: 1.5rem;
        --spacing-lg: 2.5rem;
        --spacing-xl: 4rem;
        --section-spacing: 6rem;
        --avatar-size: 48px;
        --icon-size-md: 18px;
        --fx-blur-sm: blur(8px);
        --transition-normal: 0.3s ease;
        --transition-slow: 0.6s ease;
        --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        --shadow-card-dark: 0 10px 30px rgba(0, 0, 0, 0.3);
        --shadow-elevated: 0 20px 40px rgba(0, 0, 0, 0.5);
        --border-light: #e2e8f0;
        --border-medium: #cbd5e1;
        --border-dark: #334155;
        --color-twitter: #1da1f2;
        --color-linkedin: #0a66c2;
        --color-ph: #da552f;
        --color-verified: #3b82f6;
        --color-stars: #fbbf24;
        --gradient-accent-1: #6366f1;
        --gradient-accent-2: #a855f7;

        /* === UPGRADED COLOR PALETTE === */
        --color-accent-primary: #00ffff; /* Neon Cyan (vibrant) */
        --color-accent-secondary: #ff00ff; /* Electric Purple */
        --color-bg-page: #0a0e17; /* Deep premium dark */
        --color-bg-surface: #111827; /* Card / surface */
        --color-border-strong: #1e293b;
        --color-glow-primary: rgba(0, 255, 255, 0.6); /* Glow cyan lebih intens */
        --color-glow-secondary: rgba(255, 0, 255, 0.5); /* Glow magenta baru */
        --color-text-primary: #f1f5f9; /* Bright readable white */
        --color-text-secondary: #cbd5e1; /* Soft slate */
        --layout-max-width: 1200px;
        --layout-gutter: var(--spacing-md);
        --layout-vertical-spacing: 5rem;
        --layout-guide-width: 1px;
        --layout-guide-style: solid;
        --um-font-size: clamp(1.2rem, 3vw, 2rem);
        --um-gallery-border-radius: var(--radius-lg);
        --um-gallery-item-height: 280px;
        --um-gallery-item-width: 420px;
        --um-gap-default: 2rem;
        --um-overlay-width: 120px;

        /* Ambient blobs â€“ bold futuristic */
        --ambient-blob-1: #818cf8; /* Indigo tetap */
        --ambient-blob-2: #00ffff; /* Pure cyan */
        --ambient-blob-3: #ff00ff; /* Neon magenta */

        /* Tambahan untuk efek lebih keren */
        --gradient-primary: linear-gradient(135deg, #00ffff, #00ffaa); /* Cyan to teal */
        --gradient-secondary: linear-gradient(135deg, #ff00ff, #a855f7);

        /* CODE BLOCK - DARK MODE */
        --code-bg: #0d1117;
        --code-header-bg: #161b22;
        --code-border: #30363d;
        --code-text: #f1f5f9;
        --code-scrollbar-thumb: rgba(6, 182, 212, 0.5);
        --hl-keyword: #ff7b72;
        --hl-function: #d2a8ff;
        --hl-string: #a5d6ff;
        --hl-number: #79c0ff;
        --hl-comment: #8b949e;
        --hl-tag: #7ee787;
        --hl-attr: #79c0ff;
        --code-dot-red: #ff5f56;
        --code-dot-yellow: #ffbd2e;
        --code-dot-green: #27c93f;

        --footer-font-size: 0.9rem;
        --footer-opacity: 0.7;
      }

      @media (prefers-color-scheme: light) {
        :root {
          --color-bg-page: #f8fafc;
          --color-bg-surface: #ffffff;
          --color-text-primary: #0f172a;
          --color-text-secondary: #475569;
          --color-border-strong: #94a3b8;
          --color-gridline: rgba(203, 213, 225, 0.6);
          --color-glow-primary: rgba(6, 182, 212, 0.2);
          --color-accent-primary: #0891b2;
          --color-accent-secondary: #7c3aed;
          --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.08), 0 10px 15px -3px rgba(0, 0, 0, 0.08);
          --shadow-card-dark: 0 10px 30px rgba(0, 0, 0, 0.15);
          --shadow-elevated: 0 20px 40px rgba(0, 0, 0, 0.12);
          --ambient-blob-1: #c7d2fe;
          --ambient-blob-2: #99f6e4; /* Teal mint soft */
          --ambient-blob-3: #e9d5ff;

          /* CODE BLOCK - LIGHT MODE */
          --code-bg: #ffffff;
          --code-header-bg: #f6f8fa;
          --code-border: #d0d7de;
          --code-text: #24292f;
          --code-scrollbar-thumb: #d0d7de;
          --hl-keyword: #cf222e;
          --hl-function: #8250df;
          --hl-string: #0a3069;
          --hl-number: #0550ae;
          --hl-comment: #6e7781;
          --hl-tag: #116329;
          --hl-attr: #0550ae;
        }
      }

      /* Sisanya tetap sama seperti asli */
      html {
        scrollbar-width: thin;
        scrollbar-color: var(--color-accent-primary) transparent;
      }
      body {
        margin: 0;
        padding: 0;
        font-family: var(--font-family-primary);
        background-color: var(--color-bg-page);
        color: var(--color-text-primary);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
        background: linear-gradient(135deg, #0f0a1f, #0a0e17);
      }

      main {
        display: flex;
        flex-direction: column;
        gap: var(--section-spacing);
        margin-block: var(--spacing-xl);
      }

      h1,
      h2,
      h3 {
        color: var(--color-text-primary);
      }

      .intro {
        font-size: 1.25rem;
        line-height: 1.7;
        max-width: 760px;
        margin: var(--spacing-md) auto 0;
        text-align: center;
        color: var(--color-text-secondary);
      }

      .section {
        scroll-margin-top: var(--section-spacing);
      }
      .section > h2 {
        font-size: 2.25rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: var(--spacing-lg);
        letter-spacing: -0.03em;
      }

      .how-to-use > p {
        text-align: center;
        max-width: 800px;
        margin: 0 auto var(--spacing-xl);
        font-size: 1.1rem;
        line-height: 1.6;
        color: var(--color-text-secondary);
      }

      .examples-grid {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xl);
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
      }

      .usage-example {
        background: var(--color-bg-surface);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-lg);
        padding: var(--spacing-lg);
        box-shadow:
          0 4px 6px -1px rgba(0, 0, 0, 0.02),
          0 10px 15px -3px rgba(0, 0, 0, 0.04);
        overflow: hidden;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeUp 0.9s ease forwards;
        animation-delay: calc(var(--example-index, 0) * 0.2s);
      }

      @keyframes fadeUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (prefers-color-scheme: dark) {
        .usage-example {
          border-color: var(--color-border-strong);
          box-shadow: var(--shadow-card-dark);
        }
        .usage-example:hover {
          box-shadow:
            0 0 30px rgba(0, 255, 255, 0.4),
            var(--shadow-elevated);
          border-color: #00ffff;
        }
      }

      .usage-example h3 {
        font-size: var(--font-size-h3-card);
        margin: 0 0 var(--spacing-sm);
        font-weight: 700;
        letter-spacing: -0.01em;
      }

      .usage-example > p {
        margin-bottom: 2rem;
        line-height: 1.7;
        color: var(--color-text-secondary);
        font-size: 1.05rem;
      }

      /* --- CODE WINDOW & SYNTAX STYLING --- */
      .code-window {
        margin: var(--spacing-lg) 0 0;
        background: var(--code-bg);
        border: 1px solid var(--code-border);
        border-radius: var(--radius-sm);
        box-shadow: var(--shadow-card);
        overflow: hidden;
        position: relative;
        transition:
          border-color 0.3s ease,
          background-color 0.3s ease;
      }

      .code-header {
        background: var(--code-header-bg);
        padding: 12px 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--code-border);
      }

      .window-controls {
        display: flex;
        gap: var(--gap-xs);
        align-items: center;
      }
      .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }
      .dot.red {
        background-color: var(--code-dot-red);
      }
      .dot.yellow {
        background-color: var(--code-dot-yellow);
      }
      .dot.green {
        background-color: var(--code-dot-green);
      }

      .file-name {
        color: var(--code-text);
        opacity: 0.6;
        font-family: var(--font-family-primary);
        font-size: var(--font-size-sm);
        font-weight: 500;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
      }

      .copy-btn {
        background: transparent;
        border: none;
        cursor: pointer;
        color: var(--code-text);
        opacity: 0.6;
        padding: 6px;
        border-radius: var(--radius-xs);
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 32px; /* Ensure click area */
      }
      .copy-btn:hover {
        opacity: 1;
        background: rgba(128, 128, 128, 0.2);
      }

      .copy-btn svg {
        width: 18px;
        height: 18px;
        display: block;
      }

      .code-content {
        margin: 0;
        padding: var(--spacing-md);
        overflow-x: auto;
        background: var(--code-bg);
      }

      .code-content code {
        font-family: var(--font-family-mono);
        font-size: var(--font-size-code);
        line-height: 1.6;
        color: var(--code-text);
        background: transparent !important;
        tab-size: 2;
        white-space: pre;
        display: block;
        padding-bottom: 4px;
      }

      .copy-feedback {
        white-space: nowrap;
        margin-left: 8px;
        color: #27c93f;
        font-weight: 600;
        font-size: 0.85rem;
        animation: fadeIn 0.2s ease;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateX(5px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }
    </style>

    <style is:global data-label="UM_STYLES">
      .um-container {
        display: flex;
        overflow: hidden;
        user-select: none;
        width: 100%;
        min-width: 0;
        position: relative;
        transform: translate3d(0, 0, 0);
      }
      .um-sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border-width: 0;
      }
      .um-container .um-track {
        display: none;
      }
      .um-container.js-enabled .um-track {
        display: flex;
      }
      .um-track {
        align-items: center;
        flex-wrap: nowrap;
        gap: var(--um-gap, var(--um-gap-default));
        will-change: transform;
        backface-visibility: hidden;
        perspective: 1000px;
      }
      .um-track > div {
        display: flex;
        align-items: center;
        flex-wrap: nowrap;
        flex-shrink: 0;
        gap: var(--um-gap, var(--um-gap-default));
      }
      .um-track > div > * {
        flex-shrink: 0;
        white-space: nowrap;
        display: flex;
        align-items: center;
        font-size: var(--um-font-size);
        font-weight: 700;
        font-family: var(--font-family-primary);
      }
      .um-img-skeleton {
        position: relative;
        background-color: #e5e7eb;
        overflow: hidden;
        border-radius: var(--um-gallery-border-radius);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition:
          background-color 0.4s,
          box-shadow 0.5s;
        width: var(--um-gallery-item-width);
        height: var(--um-gallery-item-height);
        min-width: var(--um-gallery-item-width);
        min-height: var(--um-gallery-item-height);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .um-img-skeleton img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        opacity: 0;
        transition: opacity 0.7s ease-out;
      }
      .um-img-skeleton img.loaded {
        opacity: 1;
      }
      .um-img-skeleton.loaded {
        background-color: transparent;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
      }
      .um-container.um-overflow-left::before,
      .um-container.um-overflow-right::after {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        width: var(--um-overlay-width);
        pointer-events: none;
        z-index: 2;
      }
      .um-container.um-overflow-left::before {
        left: 0;
        background: linear-gradient(to right, var(--gradient-overlay-color, var(--color-bg-page)), transparent);
      }
      .um-container.um-overflow-right::after {
        right: 0;
        background: linear-gradient(to left, var(--gradient-overlay-color, var(--color-bg-page)), transparent);
      }
      @media (prefers-reduced-motion: reduce) {
        .um-container {
          overflow-x: auto !important;
          -webkit-overflow-scrolling: touch;
        }
        .um-track {
          width: max-content !important;
          transform: none !important;
          animation: none !important;
          justify-content: flex-start;
        }
      }
      @media (prefers-color-scheme: dark) {
        .um-img-skeleton {
          background-color: var(--color-border-strong);
        }
        .um-img-skeleton.loaded {
          box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
        }
      }
    </style>

    <style is:global data-label="ROOT_LAYOUT_STYLES">
      .root-layout {
        position: relative;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 0;
      }

      .root-layout::before,
      .root-layout::after {
        content: '';
        border-top: var(--layout-guide-width) var(--layout-guide-style) var(--color-gridline);
        height: 0;
        position: absolute;
        left: 0;
        right: 0;
        z-index: 1;
      }

      .root-layout::before {
        top: var(--layout-vertical-spacing);
      }
      .root-layout::after {
        bottom: var(--layout-vertical-spacing);
        border-bottom: var(--layout-guide-width) var(--layout-guide-style) var(--color-gridline);
        border-top: none;
      }

      .root-layout-container {
        width: calc(100% - (var(--layout-gutter) * 2));
        max-width: var(--layout-max-width);
        margin-inline: auto;
        display: flex;
        flex-direction: column;
        padding-top: var(--layout-vertical-spacing);
        padding-bottom: var(--layout-vertical-spacing);
        box-sizing: border-box;
      }

      .root-layout-header,
      .root-layout-footer {
        position: absolute;
        right: 0;
        left: 0;
        height: var(--layout-vertical-spacing);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .root-layout-header {
        top: 0;
      }
      .root-layout-footer {
        bottom: 0;
        font-size: var(--footer-font-size);
        opacity: var(--footer-opacity);
        color: var(--color-text-secondary);
      }
      .root-layout-content {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      @media (min-width: 64rem) {
        .root-layout-container {
          border-left: var(--layout-guide-width) var(--layout-guide-style) var(--color-gridline);
          border-right: var(--layout-guide-width) var(--layout-guide-style) var(--color-gridline);
        }
      }
    </style>

    <style is:global data-label="FEATURES_STYLES">
      .demo-features {
        --features-border-radius: var(--radius-xl);
        --features-font-size: clamp(2rem, 5vw, 3.5rem);
        --features-gap: 5rem;
        --features-item-border-radius: var(--radius-pill);
        --features-item-padding: var(--spacing-sm) var(--spacing-lg);
        --features-padding-v: var(--spacing-lg);
        --features-rotate: -3deg;
        --features-skew: -5deg;
        --features-separator-margin: 0 var(--spacing-md);
        --features-separator-size: 4.5rem;
        --features-shadow: 0 15px 40px rgba(255, 105, 180, 0.5);
        --features-shadow-dark: 0 15px 40px rgba(255, 20, 147, 0.7);

        background: linear-gradient(90deg, #00ffff, #ff00ff, #00ffaa, #ff00ff);
        background-size: 200% 200%;
        animation: rainbowShift 8s ease infinite;
        padding: var(--features-padding-v) 0;
        transform: rotate(var(--features-rotate)) skewX(var(--features-skew));
        border-radius: var(--features-border-radius);
        box-shadow: var(--features-shadow);
        overflow: hidden;
        margin: var(--spacing-xl) auto;
        max-width: 95%;
        position: relative;
      }
      .demo-features:hover {
        animation-duration: 3s !important;
        animation: wiggle 0.8s ease-in-out infinite;
      }

      .demo-features .features-item {
        font-family: var(--font-family-fun);
        font-weight: 700;
        font-size: var(--features-font-size);
        letter-spacing: 2px;
        text-shadow:
          0 0 5px rgba(255, 255, 255, 0.5),
          3px 3px 0 #000;
        border-radius: var(--features-item-border-radius);
        background: rgba(20, 20, 35, 0.85);
        box-shadow:
          0 8px 20px rgba(0, 0, 0, 0.3),
          inset 0 0 0 2px rgba(255, 255, 255, 0.15);
        will-change: transform;
        align-items: center;
        text-align: center;
        line-height: 1.3;
        transition: transform 0.4s ease;
        transform: translateZ(0);
      }
      .demo-features .features-item > span {
        padding: var(--features-item-padding);
      }
      .demo-features .features-item:nth-child(odd) {
        color: #ffff00;
      }
      .demo-features .features-item:nth-child(even) {
        color: #00ffff;
      }
      .demo-features .features-item:nth-child(3n) {
        color: #ff00ff;
      }
      .demo-features .features-item:nth-child(4n) {
        color: #00ff00;
      }

      .demo-features .features-item-separator {
        font-size: var(--features-separator-size);
        margin: var(--features-separator-margin);
        animation: spinSlow 8s linear infinite;
      }
      .demo-features:hover .features-item-separator {
        animation: spinFast 1s linear infinite;
      }

      .demo-features::before {
        content: 'âœ¨ ðŸŽ‰ âœ¨ ðŸŽˆ âœ¨ ðŸŽŠ âœ¨';
        position: absolute;
        top: 10%;
        left: 0;
        width: 100%;
        font-size: 3rem;
        text-align: center;
        opacity: 0.6;
        animation: floatUp 12s linear infinite;
        pointer-events: none;
        z-index: 1;
      }
      @media (prefers-color-scheme: dark) {
        .demo-features {
          box-shadow: var(--features-shadow-dark);
        }
        .demo-features .features-item {
          background: rgba(0, 0, 0, 0.6);
          text-shadow:
            0 0 15px #fff,
            3px 3px 0 #000;
        }
      }
      @keyframes rainbowShift {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
      @keyframes wiggle {
        0%,
        100% {
          transform: rotate(var(--features-rotate)) skewX(var(--features-skew)) scale(1);
        }
        25% {
          transform: rotate(calc(var(--features-rotate) + 1deg)) skewX(calc(var(--features-skew) + 2deg)) scale(1.03);
        }
        75% {
