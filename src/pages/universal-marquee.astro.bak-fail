        if (this._opts.gradientOverlay === true) shouldShowOverlay = true;
        else if (this._opts.gradientOverlay === 'auto' && reducedMotion) {
          shouldShowOverlay = this._track.scrollWidth > this._root.offsetWidth;
        }

