    <style is:global data-label="AMBIENT_STYLES">
      .ambient-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        pointer-events: none;
        z-index: -1;
      }
      .blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: floatBlob 20s infinite alternate ease-in-out;
      }
      .blob-1 {
        top: -10%;
        left: -10%;
        width: 50vw;
        height: 50vw;
        background: radial-gradient(circle, var(--ambient-blob-1), transparent 70%);
        transform-origin: top left;
      }
      .blob-2 {
        bottom: -10%;
        right: -10%;
        width: 60vw;
        height: 60vw;
        background: radial-gradient(circle, var(--ambient-blob-2), transparent 70%);
        animation-delay: -5s;
        transform-origin: bottom right;
      }
      .blob-3 {
        top: 40%;
        left: 30%;
        width: 40vw;
        height: 40vw;
        background: radial-gradient(circle, var(--ambient-blob-3), transparent 70%);
        animation-delay: -10s;
        opacity: 0.2;
      }
      @keyframes floatBlob {
        0% {
          transform: translate(0, 0) scale(1);
        }
        50% {
          transform: translate(30px, 50px) scale(1.1);
        }
        100% {
          transform: translate(-20px, -30px) scale(0.95);
        }
      }
      @media (prefers-color-scheme: light) {
        .ambient-background {
          background-color: #ffffff;
        }
        .blob {
          filter: blur(100px);
          opacity: 0.6;
          mix-blend-mode: multiply;
        }
      }
    </style>

