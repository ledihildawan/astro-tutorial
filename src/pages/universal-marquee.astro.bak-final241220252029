  });
<\/script>`,

        'ticker.html': `<!-- HTML -->
<div id="ticker"></div>

<!-- JavaScript -->
<script type="module">
  const stocks = [
    { sym: "NVDA", val: "$177", change: "1.2%", up: true },
    { sym: "TSLA", val: "$475", change: "3.6%", up: true },
