  new UniversalMarquee("#ticker", {
    items: stocks,
    speed: 70,
    separator: " â€¢ ",
    renderItem: (item) => {
      const el = document.createElement("div");
      el.style.cssText = "display:flex;align-items:center;gap:1.5rem;background:rgba(30,41,59,0.6);padding:0.8rem 1.8rem;border-radius:16px;white-space:nowrap;";
      const sign = item.up ? "+" : "-";
