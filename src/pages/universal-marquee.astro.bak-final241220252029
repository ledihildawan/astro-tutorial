    <script type="module">
      document.querySelectorAll('.copy-btn').forEach((btn) => {
        btn.addEventListener('click', async () => {
          const codeBlock = btn.closest('.code-window').querySelector('pre code');
          const code = codeBlock.textContent.trim();
          const originalSVG = btn.innerHTML;
          try {
            await navigator.clipboard.writeText(code);
            btn.innerHTML = `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#27c93f" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" style="animation: pop 0.2s ease-out"><polyline points="20 6 9 17 4 12"/></svg>`;
            btn.style.borderColor = 'var(--code-dot-green)';
          } catch (err) {
            btn.innerHTML = `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#ff5f56" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/></svg>`;
          } finally {
            setTimeout(() => {
              btn.innerHTML = originalSVG;
              btn.style.borderColor = 'transparent';
            }, 2000);
          }
        });
      });
      const style = document.createElement('style');
      style.textContent = `@keyframes pop { 0% { transform: scale(0.8); } 50% { transform: scale(1.2); } 100% { transform: scale(1); } }`;
      document.head.appendChild(style);
    </script>
    <script type="module">
      const codeExamples = {
        'testimonials.html': `<!-- HTML -->
<div id="testimonials"></div>

<!-- CSS (opsional) -->
<style>
