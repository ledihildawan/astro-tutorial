<\/script>`,
      };

      document.querySelectorAll('.code-window').forEach((win) => {
        const name = win.querySelector('.file-name').textContent.trim();
        const codeEl = win.querySelector('pre code');
        if (codeExamples[name]) {
          codeEl.textContent = codeExamples[name];
        }
      });
    </script>
    <script type="module">
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.code-content code').forEach((block) => {
          const fileName = block.closest('.code-window')?.querySelector('.file-name')?.textContent.trim() || '';
          let lang = 'javascript';
          if (fileName.includes('html')) lang = 'html';
          else if (fileName.includes('css')) lang = 'css';
          block.classList.add(`language-${lang}`);
          hljs.highlightElement(block);
        });
      });
    </script>
  </body>
</html>
